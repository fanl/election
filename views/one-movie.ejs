<!DOCTYPE html>
<html>
  <head>
    <title>Movie Data: <%=item.name%></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <a href="/"><h1>Movie Data</h1></a>
    <dl>
      <dt>Movie name</dt>
      <dd><%=item.name%></dd>
   <% if (item.description) { %>
      <dt>Movie ID</dt>
      <dd><%=item.discription%></dd>
      <% } %>
      <dt>actors</dt>
      
      <dd>
        <% if (related_items.length > 0) { %>
        <ul>
          <% related_items.forEach(function(related_item) { %>
          <li>
            <a href="/actos/<%=related_item._id%>">
              <%=related_item.name%>
            </a>
          </li>
          <% }); %>
        </ul>
        <% } else { %>
        No actors have been added to this movie.
        <% } %>
      </dd>
    </dl>
    <div class="control">
      <h2>Add a new actor</h2>
      <form id="create-actor" method="post" action="/actors/">
        <input type="hidden" name="item[movie]" value="<%=item._id%>">
        <!-- The line above links the actor to be created to this movie. -->
        
        <label>Actor name: 
          <input name="item[name]" type="text" required
                   placeholder="Marlon Brando">
        </label>
        <label>Born: 
          <input name="item[born]" type="text" required
                   placeholder="April 4, 1924">
        </label>
        <label>Actor image URL:
          <input name="item[image]" type="url" size="80"
                   placeholder="http://en.wikipedia.org/wiki/File:Marlon_Brando_-_The_Wild_One.jpg">
        </label>
        <button>Add</button>
      </form>
    </div>
  </body>
</html>
